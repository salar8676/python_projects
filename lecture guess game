# [x] Random number generation  ==> number varible
# [x] User number ==> user_number 
# Compare user_number with number 
import random
import pyfiglet

text = 'Number Game'
welcome = pyfiglet.figlet_format(text)
print(welcome)

number = random.randint(0, 9)

while True:
    user_number = int(input('Enter Number: '))
    if user_number == number:
        print('You Won')
        break
    else:
        print('Try Again')
        continue